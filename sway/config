input type:keyboard {
    xkb_layout us,ru,il
    xkb_options grp:alt_space_toggle,caps:escape
}

for_window [ title="Picture-in-Picture"] floating enable, resize set width 536 px height 300 px, move position 1970 px 1110 px, sticky on
